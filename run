#!/bin/bash

cmd=
[ -n "$QEMU" ] || {
	QEMU=qemu-system-x86_64
	CEQEMU=$HOME/CE/bin/qemu-system-x86_64
	[ -x "$CEQEMU" ] && QEMU=$CEQEMU
}
CEHDPATH=${CEHDPATH:-$HOME/CE/share/hd.img}
BOOT=${BOOT:-$HOME/CE/lib/ce/boot.bin}

cmd="$QEMU \
	-kernel $BOOT \
	-initrd build/sistema \
	-drive file=.swap,cache=unsafe \
	-no-reboot"

if [ "$1" == -g ]; then
	cmd="$cmd -s -append \"-s\""
	shift
fi
	
trap 'stty sane' exit

if [ "$AUTOCORR" == 1 ]; then
	cmd="$cmd -nographic"
else
	cmd="$cmd -serial stdio"
fi

if [ -f "$CDEPATH" ]; then
	cmd="$cmd -hdc \"$CDEPATH\""
fi


echo Eseguo: $cmd
eval $cmd | util/show_log.pl
